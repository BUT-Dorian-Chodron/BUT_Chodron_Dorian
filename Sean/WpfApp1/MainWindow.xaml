<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>
        <GroupBox Grid.Column="0" HorizontalAlignment="Stretch" Height="auto" Margin="5" VerticalAlignment="Stretch" Width="auto">
            <TextBox x:Name="textBoxEmission" AcceptsReturn="True"  TextWrapping="Wrap" KeyUp="textBoxEmission_KeyUp">
            </TextBox>
        </GroupBox>
        <GroupBox Grid.Column="1" HorizontalAlignment="Stretch" Height="auto" Margin="5" VerticalAlignment="Stretch" Width="auto">
            <TextBox x:Name="textBoxReception"  AcceptsReturn="True" Text="" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </GroupBox>
        <Button x:Name="buttonEnvoyer" Content="envoyer" Grid.Column="1" Margin="5" HorizontalAlignment="Center"  Height="auto"  VerticalAlignment="Stretch" Width="150" Grid.RowSpan="1" Grid.ColumnSpan="2" Grid.Row="2" Click="buttonEnvoyer_Click" />
        <Button x:Name="Clear" Content="Clear" Grid.Column="0" Margin="5" HorizontalAlignment="Center"  Height="auto"  VerticalAlignment="Stretch" Width="150" Grid.RowSpan="1" Grid.ColumnSpan="1" Grid.Row="2" Click="Clear_Click" />

    </Grid>
</Window>

